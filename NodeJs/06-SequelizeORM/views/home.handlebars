<h1>Registered users</h1>

<div class="container">
  {{#each users}}
    <div class="item">
      <h2>{{this.name}}</h2>
      <p>{{this.occupation}}</p>
      <div class="actions">
        <a href="/users/{{this.uuid}}" class="details-btn">Details</a>
        <a href="/users/edit/{{this.uuid}}" class="edit-btn">Edit</a>
        <form action="/users/delete/{{this.uuid}}" method="POST">
          <button type="submit" class="delete-btn">Delete</button>
        </form>
      </div>
    </div>
  {{/each}}
</div>