<div class="container">
  <h1>Tasks</h1>
  <form class="task-search" method="GET">
    <input type="search" name="title" placeholder="Search a task by title" />
    <button type="submit">
      <i class="bi bi-search"></i>
    </button>
  </form>
  <button class="show-filters-btn">
    <i class="bi bi-funnel-fill"></i>
    Filters
  </button>
  <div class="task-filter show-filters">
    <a href="/tasks/list">
      All tasks
    </a>
    <form class="filter-task" method="GET">
      <input type="hidden" name="done" value="1" />
      <button type="submit">
        Done tasks
      </button>
    </form>
    <form class="filter-task" method="GET">
      <input type="hidden" name="done" value="0" />
      <button type="submit">
        Not done tasks
      </button>
    </form>
  </div>
  <ul class="task-list">
    {{#if taskList}}
      {{#each taskList}}
        <li>
          {{#if this.done}}
            <a href="/" class="title done">{{this.title}}</a>
          {{else}}
            <a href="/" class="title">{{this.title}}</a>
          {{/if}}
          <div class="actions">
            <form action="/tasks/done/{{this.uuid}}" method="POST">
              <button type="submit">
                <i class="bi bi-check-square"></i>
              </button>
            </form>
            <a href="/tasks/edit/{{this.uuid}}">
              <i class="bi bi-pencil-square"></i>
            </a>
            <form action="/tasks/delete/{{this.uuid}}" method="POST">
              <button type="submit">
                <i class="bi bi-x-square"></i>
              </button>
            </form>
          </div>
        </li>
      {{/each}}
    {{else}}
      <div class="task-not-found">
        {{#if done}}
          <h1>{{notice}}</h1>
        {{else}}
          <h1>Task <span>'{{title}}'</span> not found</h1>
        {{/if}}
        <a href="/tasks/list">
          <i class="bi bi-arrow-left"></i>
          Back
        </a>
      </div>
    {{/if}}
  </ul>
</div>