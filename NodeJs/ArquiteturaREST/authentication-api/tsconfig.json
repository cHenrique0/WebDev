/* Visit https://aka.ms/tsconfig to read more about this file */
{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022", // Versão que o TypeScript será transpilado

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src", // diretorio onde estão os scripts
    "moduleResolution": "node",
    "typeRoots": [
      // diretorios dos arquivos de definição do typescript
      "./src/@types",
      "./node_modules/@types"
    ],

    /* Emit */
    "outDir": "./dist", // onde fica o codigo transpilado
    "removeComments": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
